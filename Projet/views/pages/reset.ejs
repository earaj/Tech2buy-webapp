<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Application evenements</title>
    <link href='https://fonts.googleapis.com/css?family=Barlow Semi Condensed' rel='stylesheet'>
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="commun.css" />
    <script src="/js/bootstrap.min.js"></script>
</head>
<%- include ("../partials/header.ejs") %>

<div class="row justify-content-center">
    <div class="col-auto">
        <div class="card-header" style="margin-top: 70px;" class="card-title mb-0">
            <Center>
                <h1><strong>Changer le mot de passe</strong></h1>
            </Center>
        </div>

        <br><br>
        <Center>
            <form style="width: 40%;" method="POST" action="/miseAJourMotDePasse">
                <div class="card">
                    <label for="nouveau_mot_de_passe">Nouveau mot de passe</label>
                    <input type="password" class="form-control input-lg" id="nouveau_mot_de_passe" name="nouveau_mot_de_passe" required>

                    <label for="confirmer_nouveau_mot_de_passe">Confirmer le nouveau mot de passe</label>
                    <input type="password" class="form-control input-lg" id="confirmer_nouveau_mot_de_passe" name="confirmer_nouveau_mot_de_passe" required>

                    <div class="row justify-content-center">
                        <div class="col-auto"></div>
                    </div>
                </div>

                <br><br><br>

                <div class="row justify-content-center">
                    <div class="col-auto">
                        <button class="btn btn-primary btn-lg" type="submit">Changer le mot de passe</button>
                    </div>
                </div>
            </form>
        </Center>
    </div>
</div>

<div style="position: absolute; bottom: 0%; width: 100%; left:0%">
    <%- include ("../partials/footer.ejs") %>
</div>