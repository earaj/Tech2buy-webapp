<script>
    function searchFor(term) {
        var xhr = new XMLHttpRequest();
        xhr.open('GET', '/recherche?query=' + term, true);
        xhr.onload = function () {
            if (xhr.status === 200) {
                window.location.href = '/recherche?query=' + term;
            } else {

                console.error('Erreur lors de la recherche :', xhr.statusText);
            }
        };
        xhr.onerror = function () {
            console.error('Erreur interne du serveur');
        };
        xhr.send();
    }
</script>
